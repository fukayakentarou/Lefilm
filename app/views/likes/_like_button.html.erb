<% if current_user.like?(movie) %>

  <%= form_tag(like_path(movie.id), method: :delete) do %>
    <%= hidden_field_tag :movie_id, movie.id %>
    <%= hidden_field_tag :like, 'like' %>
    <%= submit_tag 'Unlike', class: 'btn btn-success' %>
  <% end %>
<% else %>
  <%= form_tag(likes_path) do %>
    <%= hidden_field_tag :movie_code, movie.code %>
    <%= hidden_field_tag :like, 'like' %>
    <%= submit_tag 'like it', class: 'btn btn-primary' %>
    
  <% end %>
<% end %>