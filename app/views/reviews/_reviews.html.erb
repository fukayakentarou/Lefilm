<ul class="media-list">
  <% reviews.each do |review| %>
    <li class="media">
      
      <div class="media-body">
        <div>
          <%= link_to review.user.name, user_path(review.user) %> <span class="text-muted">posted at <%= review.created_at %></span>
        </div>
        <div>
          <p><input type="hidden" name="movie_id" value="movie.id"></p>
        </div>
        <div>
          <p><%= review.content %></p>
        </div>
        <div>
        
        <% if current_user == review.user %> 
        <%= link_to "レビューを削除する", review_path(review), method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
        <% end %>
          
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate reviews %>
</ul>