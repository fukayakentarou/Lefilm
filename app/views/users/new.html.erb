
<div class="text-center">
    <h1>新規登録</h1>
</div>

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <%= form_for(@user) do |f| %>
        <%= render 'layouts/error_messages', model: f.object %>
        
        <!--<div class="form-inline">-->
        <div class="form-group row">
            <label for="user_name" class="col-sm-2 col-form-label">名前</label>
            <!--<%= f.label :name, '名前' %>-->
                <div class="col-sm-10">
                <%= f.text_field :name, class: 'form-control' %>
                </div>
        </div>
        
        
        <div class="form-group row">
            <label for="user_email" class="col-sm-2 col-form-label">メールアドレス</label>
            <!--<%= f.label :email, 'メールアドレス' %>-->
                <div class="col-sm-10">
                <%= f.email_field :email, class: 'form-control' %>
                </div>
        </div>
        
        
        <div class="form-group row">
            <label for="user_password" class="col-sm-2 col-form-label">パスワード</label>
            <!--<%= f.label :password, 'パスワード' %>-->
                <div class="col-sm-10">
                <%= f.password_field :password, class: 'form-control' %>
                </div>
        </div>
        
        <div class="form-group row">
            <label for="user_password_confirmation" class="col-sm-2 col-form-label">パスワード（確認）</label>
            <!--<%= f.label :password_confirmation, 'パスワード（確認）' %>-->
                <div class="col-sm-10">
                <%= f.password_field :password_confirmation, class: 'form-control' %>
                </div>
        </div>
        
        <div class="text-right">
        <%= f.submit '登録する', class: "btn btn-primary btn-block" %>
        </div>
        
        
        <% end %>
        <!--</div>-->
        
        
    </div>
</div>
