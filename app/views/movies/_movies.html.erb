<% if movies %>
<div class="row">
    
    <% movies.each do |movie| %>
        <div class="movie">
            <!--<div class="col-md-3 col-md-4 col-xs-12">-->
                <div class="movie animated">
                <div class="oyayouso_pc">
                        <div class="panel panel-default">
                            <div class="panel-heading text-center">
                                <img src="<%= 'https://image.tmdb.org/t/p/w500/' + movie.poster_path.to_s %>" alt="" >
                        　　</div>
                        　　<div class="panel-body_pc">
                                <% if movie.persisted? %>
                                    <p class="movie-title_pc"><%= link_to movie.title, movie_path(movie) %></p>
                                <% else %>
                                    <p class="movie-title"><%= movie.title %></p>
                                <% end %>
                            
                            <div class="buttons text-center">
                                <% if logged_in? %>
                                <%= render 'likes/like_button', movie: movie %>
                                <% end %>
                            </div>
                            </div>
                        </div>
                </div>
                </div>
            <!--</div>-->
        </div>
    <% end %>
</div> 
<% end %>
<%= paginate @movies %>



